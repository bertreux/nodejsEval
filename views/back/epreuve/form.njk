{% extends 'back.njk' %}

{% block title %}{{ title }}{% endblock %}

{% block bodyback %}
    <h1>{{ title }}</h1>
    <form>
        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" class="form-control" id="Nom" placeholder="Nom" name="Nom" value="{{ epreuve.Nom }}">
        </div>
        <div class="form-group">
            <label for="sexe">sport_id :</label>
            <select class="form-control" id="sport_id" name="sport_id">
                {% for sport in sports %}
                    <option {% if epreuve.sport_id == sport.id_sport %}selected="selected"{% endif %}>{{ sport.id_sport }} - {{ sport.Nom }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="sexe">athlete_id :</label>
            <select class="form-control" id="athlete_id" name="athlete_id">
                {% for athlete in athletes %}
                    <option {% if epreuve.athlete_id == athlete.id_athlete %}selected="selected"{% endif %}>{{ athlete.id_athlete }} - {{ athlete.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
{% endblock %}