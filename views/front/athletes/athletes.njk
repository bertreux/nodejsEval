    {% for athlete in athletes %}

            <article class="col-4 mb-4" key={article.id}>
                <div class="card">
                    <h2 class="card-header">
                        {{ athlete.prenom }} {{ athlete.nom }}, {{ athlete.age }} ans
                    </h2>
                    {# <div class="card-body article_contenu">
                        {article.contenu}
                    </div> #}
                </div>
            </article>
        
    {% else %}
        <p>Aucun Athlete enregistr√©</p>
    {% endfor %}
{% endblock %}