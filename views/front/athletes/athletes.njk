{% extends "base.njk" %}

{% block title %}
    Athlètes
{% endblock %}

{% block body %}
    <h1>Athlètes</h1>
    {% if athletes.length > 0 %}
        <ul>
            {% for athlete in athletes %}
                <li>
                    <a href="/athletes/{{ athlete.id_athlete }}">
                        <p>Nom: {{ athlete.Nom }}</p>
                        <p>Prénom: {{ athlete.Prenom }}</p>
                        <p>Âge: {{ athlete.Age }}</p>
                        <p>Pays: {{ athlete.Pays }}</p>
                        {% if athlete.Pays %}
                            <script>
                                console.log("Nom du pays:", "{{ athlete.Pays }}");
                            </script>
                        {% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun athlète enregistré</p>
    {% endif %}
{% endblock %}
